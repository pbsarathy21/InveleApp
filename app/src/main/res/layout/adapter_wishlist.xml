<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewpager_home"
            type="com.ninositsolution.inveleapp.home.HomeVM"/>
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:padding="@dimen/_4sdp"
                    android:layout_margin="@dimen/_8sdp"
                    android:background="@color/white"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/image_general_1"
                        android:layout_centerHorizontal="true"
                        android:layout_width="@dimen/_130sdp"
                        android:layout_height="@dimen/_150sdp"
                        android:scaleType="centerCrop"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/shop4" />

                    <TextView
                        android:id="@+id/flash_item_name"
                        android:layout_alignStart="@+id/image_general_1"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_below="@+id/image_general_1"
                        android:textSize="@dimen/_11sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/flash_item" />

                    <LinearLayout
                        android:id="@+id/flash_rate"
                        android:layout_below="@+id/flash_item_name"
                        android:layout_alignStart="@+id/image_general_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/flash_rate"
                            android:textColor="@color/colorPrimary" />

                        <Space
                            android:layout_width="@dimen/_12sdp"
                            android:layout_height="match_parent" />

                        <TextView
                            android:id="@+id/delete_rate_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/flash_deleted" />


                    </LinearLayout>



                    <LinearLayout
                        android:id="@+id/flash_rating"
                        android:layout_below="@+id/flash_rate"
                        android:layout_alignStart="@+id/image_general_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RatingBar
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:numStars="5"
                            android:rating="3.5"
                            android:theme="@style/RatingBar"
                            style="?android:attr/ratingBarStyleSmall"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/rating" />

                        <Space
                            android:layout_width="@dimen/_18sdp"
                            android:layout_height="match_parent" />

                        <ImageView
                            android:layout_width="@dimen/_12sdp"
                            android:layout_height="@dimen/_12sdp"
                            app:srcCompat="@drawable/ic_heart_red"
                            android:layout_gravity="center_vertical"
                            tools:ignore="ContentDescription" />

                        <Space
                            android:layout_width="@dimen/_4sdp"
                            android:layout_height="match_parent" />

                        <TextView
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/heart" />

                    </LinearLayout>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:padding="@dimen/_4sdp"
                    android:background="@color/white"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/image_general_2"
                        android:layout_centerHorizontal="true"
                        android:layout_width="@dimen/_130sdp"
                        android:layout_height="@dimen/_150sdp"
                        android:scaleType="centerCrop"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/shop3" />

                    <TextView
                        android:id="@+id/flash_item_name2"
                        android:layout_alignStart="@+id/image_general_2"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_below="@+id/image_general_2"
                        android:textSize="@dimen/_11sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/flash_item" />

                    <LinearLayout
                        android:id="@+id/flash_rate2"
                        android:layout_below="@+id/flash_item_name2"
                        android:layout_alignStart="@+id/image_general_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/flash_rate"
                            android:textColor="@color/colorPrimary" />

                        <Space
                            android:layout_width="@dimen/_12sdp"
                            android:layout_height="match_parent" />

                        <TextView
                            android:id="@+id/delete_rate_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/flash_deleted" />

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/flash_rating2"
                        android:layout_below="@+id/flash_rate2"
                        android:layout_alignStart="@+id/image_general_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RatingBar
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:numStars="5"
                            android:rating="3.5"
                            android:theme="@style/RatingBar"
                            style="?android:attr/ratingBarStyleSmall"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/rating" />

                        <Space
                            android:layout_width="@dimen/_18sdp"
                            android:layout_height="match_parent" />


                        <ImageView
                            android:layout_width="@dimen/_12sdp"
                            android:layout_height="@dimen/_12sdp"
                            app:srcCompat="@drawable/ic_heart_red"
                            android:layout_gravity="center_vertical"
                            tools:ignore="ContentDescription" />

                        <Space
                            android:layout_width="@dimen/_4sdp"
                            android:layout_height="match_parent" />

                        <TextView
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/heart" />

                    </LinearLayout>


                </RelativeLayout>


            </LinearLayout>


        </LinearLayout>


    </android.support.v7.widget.CardView>

</layout>