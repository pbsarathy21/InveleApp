<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <data>
        
        <variable
            name="popupProduct"
            type="com.ninositsolution.inveleapp.product_detail_page.ProductDetailVM"/>
    </data>

    <android.support.v7.widget.CardView
        app:cardElevation="@dimen/_8sdp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:padding="@dimen/_8sdp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/ic_close_black_24dp"
                android:text="@string/store_location"
                android:paddingStart="@dimen/_8sdp"
                android:paddingEnd="@dimen/_8sdp"
                android:textSize="@dimen/prod_text_small"
                android:textColor="@color/colorPrimary"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/_8sdp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/lightGrey"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/_8sdp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/account_name"
                android:textSize="@dimen/prod_text_small"/>

            <TextView
                android:layout_marginStart="@dimen/_24sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_16sdp"
                android:text="@string/address_sample"
                android:textSize="@dimen/prod_text_small"/>

            <TextView
                android:layout_marginStart="@dimen/_24sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pincode"
                android:textSize="@dimen/prod_text_small"/>


            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/_8sdp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/lightGrey"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/_8sdp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/account_name"
                android:textSize="@dimen/prod_text_small"/>

            <TextView
                android:layout_marginStart="@dimen/_24sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_16sdp"
                android:text="@string/address_sample"
                android:textSize="@dimen/prod_text_small"/>

            <TextView
                android:layout_marginStart="@dimen/_24sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pincode"
                android:textSize="@dimen/prod_text_small"/>


            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/_8sdp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/lightGrey"/>
            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/_8sdp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/account_name"
                android:textSize="@dimen/prod_text_small"/>

            <TextView
                android:layout_marginStart="@dimen/_24sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/address_sample"
                android:layout_marginEnd="@dimen/_16sdp"
                android:textSize="@dimen/prod_text_small"/>

            <TextView
                android:layout_marginStart="@dimen/_24sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pincode"
                android:textSize="@dimen/prod_text_small"/>


            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/_8sdp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/lightGrey"/>



        </LinearLayout>

    </android.support.v7.widget.CardView>

</layout>

