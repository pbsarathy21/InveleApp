<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="register"
            type="com.ninositsolution.inveleapp.registration.RegisterVM"/>
    </data>

    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <android.support.v7.widget.CardView
            android:id="@+id/card_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="16dp"
            android:layout_marginStart="36dp"
            android:layout_marginEnd="36dp"
            android:layout_centerHorizontal="true"
            android:backgroundTint="#f2f3f4"
            app:cardCornerRadius="16dp"
            android:layout_marginTop="100dp">

            <RelativeLayout
                android:id="@+id/register_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:padding="8dp">

                <RelativeLayout
                    android:id="@+id/head_register"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="24dp"
                        android:onClick="@{()->register.onEmailClicked()}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/email"
                            android:textStyle="bold"
                            android:fontFamily="@font/roboto_regular"
                            android:textSize="18sp"/>

                        <View
                            android:id="@+id/view_email"
                            android:layout_width="match_parent"
                            android:layout_height="4dp"
                            android:layout_marginStart="2dp"
                            android:background="@color/colorPrimary"/>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_alignParentEnd="true"
                        android:onClick="@{()->register.onMobileClicked()}"
                        android:layout_marginEnd="24dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/mobile"
                            android:textStyle="bold"
                            android:fontFamily="@font/roboto_regular"
                            android:textSize="18sp" />

                        <View
                            android:id="@+id/view_mobile"
                            android:layout_width="match_parent"
                            android:layout_height="4dp"
                            android:layout_marginStart="2dp"
                            android:visibility="invisible"
                            android:background="@color/colorPrimary"/>


                    </LinearLayout>

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/email_register"
                    android:layout_below="@+id/head_register"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:fontFamily="@font/roboto_regular"
                            android:inputType="textEmailAddress"
                            android:afterTextChanged="@{(editable)->register.afterEmailChanged(editable)}"
                            android:hint="@string/email"
                            tools:ignore="Autofill" />


                    </android.support.design.widget.TextInputLayout>



                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="8dp" />

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:fontFamily="@font/roboto_regular"
                            android:inputType="text"
                            android:afterTextChanged="@{(editable)->register.afterNameChanged(editable)}"
                            android:hint="@string/name"
                            tools:ignore="Autofill" />


                    </android.support.design.widget.TextInputLayout>



                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="8dp" />

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:fontFamily="@font/roboto_regular"
                            android:inputType="textPassword"
                            android:afterTextChanged="@{(editable)->register.afterPasswordChanged(editable)}"
                            android:hint="@string/password"
                            tools:ignore="Autofill" />


                    </android.support.design.widget.TextInputLayout>


                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="8dp" />

                    <CheckBox
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/agree"/>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/user"
                        android:fontFamily="@font/roboto_regular"
                        android:onClick="@{()->register.onUserClicked()}"
                        android:layout_gravity="end"
                        android:textColor="@color/colorPrimary"/>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="12dp" />

                    <Button
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="@string/continue_button"
                        android:fontFamily="@font/roboto_regular"
                        android:onClick="@{()->register.onEmailContinueClicked()}"
                        android:textColor="@android:color/white"
                        android:backgroundTint="@color/colorPrimary"
                        android:layout_gravity="center"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/mobile_register"
                    android:layout_below="@+id/head_register"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_regular"
                            android:textSize="16sp"
                            android:inputType="phone"
                            android:maxLength="10"
                            android:afterTextChanged="@{(editable)->register.afterMobile2Changed(editable)}"
                            android:hint="@string/mobile2"
                            tools:ignore="Autofill" />


                    </android.support.design.widget.TextInputLayout>



                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/user2"
                        android:fontFamily="@font/roboto_regular"
                        android:onClick="@{()->register.onUser2Clicked()}"
                        android:layout_gravity="end"
                        android:textColor="@color/colorPrimary"/>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="12dp" />

                    <Button
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="@string/continue_button"
                        android:fontFamily="@font/roboto_regular"
                        android:onClick="@{()->register.onMobileContinueClicked()}"
                        android:textColor="@android:color/white"
                        android:backgroundTint="@color/colorPrimary"
                        android:layout_gravity="center"/>

                </LinearLayout>



            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/otp_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:visibility="gone">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/otp_input_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/otp"
                        android:layout_marginTop="48dp"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp"
                        android:afterTextChanged="@{(editable)->register.afterOtpChanged(editable)}"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:background="@null"
                        android:hint="@string/otp"
                        tools:ignore="Autofill,TextFields" />


                </android.support.design.widget.TextInputLayout>



                <TextView
                    android:id="@+id/resend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/otp_input_layout"
                    android:onClick="@{()->register.onResendClicked()}"
                    android:layout_alignParentEnd="true"
                    android:enabled="false"
                    android:fontFamily="@font/roboto_regular"
                    android:text="@string/resend"
                    tools:ignore="RelativeOverlap" />

                <View
                    android:id="@+id/line_view"
                    android:layout_below="@+id/otp_input_layout"
                    android:layout_width="match_parent"
                    android:background="#dbdbdb"
                    android:layout_marginTop="4dp"
                    android:layout_alignStart="@+id/otp_input_layout"
                    android:layout_height="2dp"/>

                <TextView
                    android:id="@+id/timer"
                    android:layout_below="@+id/line_view"
                    android:layout_marginTop="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/colorPrimary"
                    android:text="@string/timer"/>


                <Button
                    android:layout_below="@+id/line_view"
                    android:layout_centerHorizontal="true"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="@string/continue_button"
                    android:fontFamily="@font/roboto_regular"
                    android:onClick="@{()->register.onOtpContinueClicked()}"
                    android:textColor="@android:color/white"
                    android:backgroundTint="@color/colorPrimary"
                    android:layout_gravity="center"/>

            </RelativeLayout>


        </android.support.v7.widget.CardView>


        <LinearLayout
           android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="24dp"
            android:layout_height="wrap_content">

            <LinearLayout

                android:id="@+id/reg_with"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="42dp"
                android:layout_marginEnd="42dp"
                android:orientation="horizontal">

                <View
                    android:layout_width="72dp"
                    android:layout_height="4dp"
                    android:background="#dbdbdb"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/register_with"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"/>

                <View
                    android:layout_width="72dp"
                    android:layout_height="4dp"
                    android:background="#dbdbdb"
                    android:layout_gravity="center"/>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="42dp"
                android:layout_marginEnd="42dp"
                android:layout_marginTop="24dp"
                android:orientation="horizontal">

                <Button
                    android:layout_width="120dp"
                    android:layout_height="36dp"
                    android:layout_alignParentStart="true"
                    android:onClick="@{()->register.onFacebookClicked()}"
                    android:fontFamily="@font/roboto_regular"
                    android:background="#4867aa"
                    android:layout_marginStart="8dp"
                    android:text="@string/fb"
                    android:paddingStart="12dp"
                    android:paddingEnd="0dp"
                    android:textColor="@android:color/white"
                    android:drawableStart="@drawable/ic_fb2"/>

                <Button
                    android:layout_width="120dp"
                    android:layout_height="36dp"
                    android:background="#f2f3f4"
                    android:onClick="@{()->register.onGoogleClicked()}"
                    android:fontFamily="@font/roboto_regular"
                    android:paddingStart="12dp"
                    android:paddingEnd="0dp"
                    android:drawableStart="@drawable/ic_google"
                    android:layout_marginEnd="8dp"
                    android:textColor="#7f8787"
                    android:layout_alignParentEnd="true"
                    android:text="@string/google" />


            </RelativeLayout>


        </LinearLayout>



    </RelativeLayout>

</layout>