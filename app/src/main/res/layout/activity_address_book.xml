<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="addressBook"
            type="com.ninositsolution.inveleapp.address_book.AddressBookVM"/>
    </data>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_36sdp">

            <android.support.v7.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:contentInsetStart="0dp"
                android:background="@color/white">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/toolBar_height">

                    <ImageView
                        android:onClick="@{()->addressBook.onBackClicked()}"
                        android:id="@+id/account_header_back"
                        android:layout_width="36dp"
                        android:layout_height="32dp"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_centerVertical="true"
                        app:srcCompat="@drawable/ic_arrow_back_24dp"
                        tools:ignore="ContentDescription" />


                    <TextView
                        android:layout_toEndOf="@+id/account_header_back"
                        android:layout_marginStart="@dimen/_12sdp"
                        android:id="@+id/search_header"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/address_book"
                        android:textSize="@dimen/_16sdp"
                        tools:ignore="RelativeOverlap" />


                </RelativeLayout>


            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.AppBarLayout>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#e0e0e0"/>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_8sdp">


                    <RadioButton
                        android:id="@+id/address_radio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/address_name"
                        android:layout_toEndOf="@+id/address_radio"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/account_name"
                        android:textSize="@dimen/_14sdp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/address_phone"
                        android:layout_below="@+id/address_name"
                        android:layout_alignStart="@+id/address_name"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/phone_sample"
                        android:textSize="@dimen/_14sdp"
                        />

                    <TextView
                        android:id="@+id/address_1"
                        android:layout_below="@+id/address_phone"
                        android:layout_alignStart="@+id/address_name"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/address_sample"
                        android:textSize="@dimen/_14sdp"
                        />

                    <TextView
                        android:id="@+id/pincode"
                        android:layout_below="@+id/address_1"
                        android:layout_alignStart="@+id/address_name"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pincode"
                        android:textSize="@dimen/_14sdp"
                        />

                    <Button
                        android:id="@+id/shipping_button"
                        android:layout_below="@+id/pincode"
                        android:layout_alignStart="@+id/address_name"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="@string/shipping"
                        android:paddingStart="@dimen/_8sdp"
                        android:paddingEnd="@dimen/_8sdp"
                        android:textStyle="bold"
                        android:background="@color/colorPrimary"
                        android:textColor="@android:color/white"/>

                    <RelativeLayout
                        android:onClick="@{()->addressBook.onEditClicked()}"
                        android:id="@+id/address_edit"
                        android:layout_width="@dimen/_32sdp"
                        android:layout_height="@dimen/_32sdp"
                        android:layout_alignTop="@+id/shipping_button"
                        android:background="@drawable/margin"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="@dimen/_8sdp">

                        <ImageView
                            android:layout_width="@dimen/_14sdp"
                            android:layout_height="@dimen/_14sdp"
                            android:src="@drawable/edit_button"
                            android:layout_centerInParent="true"
                            tools:ignore="ContentDescription" />


                    </RelativeLayout>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_4sdp"
                    android:background="#e0e0e0"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_8sdp">


                    <RadioButton
                        android:id="@+id/address_radio1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/address_name1"
                        android:layout_toEndOf="@+id/address_radio1"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/account_name"
                        android:textSize="@dimen/_14sdp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/address_phone1"
                        android:layout_below="@+id/address_name1"
                        android:layout_alignStart="@+id/address_name1"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/phone_sample"
                        android:textSize="@dimen/_14sdp"
                        />

                    <TextView
                        android:id="@+id/address_11"
                        android:layout_below="@+id/address_phone1"
                        android:layout_alignStart="@+id/address_name1"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/address_sample"
                        android:textSize="@dimen/_14sdp"
                        />

                    <TextView
                        android:id="@+id/pincode1"
                        android:layout_below="@+id/address_11"
                        android:layout_alignStart="@+id/address_name1"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pincode"
                        android:textSize="@dimen/_14sdp"
                        />

                    <Button
                        android:id="@+id/shipping_button1"
                        android:layout_below="@+id/pincode1"
                        android:layout_alignStart="@+id/address_name1"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="@string/billing"
                        android:paddingStart="@dimen/_8sdp"
                        android:paddingEnd="@dimen/_8sdp"
                        android:textStyle="bold"
                        android:background="@color/colorPrimary"
                        android:textColor="@android:color/white"/>

                    <RelativeLayout
                        android:id="@+id/address_edit1"
                        android:layout_width="@dimen/_32sdp"
                        android:layout_height="@dimen/_32sdp"
                        android:layout_alignTop="@+id/shipping_button1"
                        android:background="@drawable/margin"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="@dimen/_8sdp">

                        <ImageView
                            android:layout_width="@dimen/_14sdp"
                            android:layout_height="@dimen/_14sdp"
                            android:src="@drawable/edit_button"
                            android:layout_centerInParent="true"
                            tools:ignore="ContentDescription" />


                    </RelativeLayout>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_4sdp"
                    android:background="#e0e0e0"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_8sdp">


                    <RadioButton
                        android:id="@+id/address_radio2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/address_name2"
                        android:layout_toEndOf="@+id/address_radio2"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/account_name"
                        android:textSize="@dimen/_14sdp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/address_phone2"
                        android:layout_below="@+id/address_name2"
                        android:layout_alignStart="@+id/address_name2"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/phone_sample"
                        android:textSize="@dimen/_14sdp"
                        />

                    <TextView
                        android:id="@+id/address_12"
                        android:layout_below="@+id/address_phone2"
                        android:layout_alignStart="@+id/address_name2"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/address_sample"
                        android:textSize="@dimen/_14sdp"
                        />

                    <TextView
                        android:id="@+id/pincode2"
                        android:layout_below="@+id/address_12"
                        android:layout_alignStart="@+id/address_name2"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pincode"
                        android:textSize="@dimen/_14sdp"
                        />



                    <RelativeLayout
                        android:id="@+id/address_delete2"
                        android:layout_width="@dimen/_32sdp"
                        android:layout_height="@dimen/_32sdp"
                        android:layout_alignTop="@+id/pincode2"
                        android:layout_marginTop="@dimen/_18sdp"
                        android:background="@drawable/margin"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="@dimen/_8sdp">

                        <ImageView
                            android:layout_width="@dimen/_14sdp"
                            android:layout_height="@dimen/_14sdp"
                            android:src="@drawable/delete_button"
                            android:layout_centerInParent="true"
                            tools:ignore="ContentDescription" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/address_edit2"
                        android:layout_width="@dimen/_32sdp"
                        android:layout_height="@dimen/_32sdp"
                        android:layout_alignTop="@+id/pincode2"
                        android:layout_marginTop="@dimen/_18sdp"
                        android:background="@drawable/margin"
                        android:layout_toStartOf="@+id/address_delete2"
                        android:layout_marginEnd="@dimen/_8sdp">

                        <ImageView
                            android:layout_width="@dimen/_14sdp"
                            android:layout_height="@dimen/_14sdp"
                            android:src="@drawable/edit_button"
                            android:layout_centerInParent="true"
                            tools:ignore="ContentDescription" />


                    </RelativeLayout>

                </RelativeLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_88sdp" />


            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

        <RelativeLayout
            android:layout_gravity="bottom"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_72sdp">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_4sdp"
                android:background="#e0e0e0"/>

            <Button
                android:onClick="@{()->addressBook.onAddAddressClicked()}"
                android:id="@+id/add_address_button"
                android:layout_centerInParent="true"
                android:layout_width="@dimen/_180sdp"
                android:layout_height="@dimen/_42sdp"
                android:text="@string/add_address"
                android:paddingStart="@dimen/_8sdp"
                android:paddingEnd="@dimen/_8sdp"
                android:textStyle="bold"
                android:background="@color/colorPrimary"
                android:textColor="@android:color/white"/>


        </RelativeLayout>



    </android.support.design.widget.CoordinatorLayout>


</layout>