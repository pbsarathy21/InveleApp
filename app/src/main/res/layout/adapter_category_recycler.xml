<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_4sdp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_32sdp"
                >

                <TextView
                    android:id="@+id/categories_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:paddingStart="@dimen/_8sdp"
                    android:paddingEnd="@dimen/_8sdp"
                    android:textSize="@dimen/_12sdp"
                    android:text="@string/womens"

                    />

                <View
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/_42sdp"
                    android:layout_width="@dimen/_1sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_marginBottom="@dimen/_4sdp"
                    android:layout_height="match_parent"
                    android:background="@color/grayWhite">

                </View>

                <ImageView
                    android:id="@+id/down_arrow"
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/_12sdp"
                    android:layout_centerVertical="true"
                    android:visibility="gone"
                    app:srcCompat="@drawable/ic_keyboard_arrow_down_black_24dp"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/up_arrow"
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/_12sdp"
                    android:visibility="visible"
                    android:layout_centerVertical="true"
                    app:srcCompat="@drawable/ic_keyboard_arrow_up_black_24dp"
                    tools:ignore="ContentDescription" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/grayWhite"/>

            <LinearLayout
                android:animateLayoutChanges="true"
                android:id="@+id/categories_childlayout"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="3"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="@dimen/_4sdp"
                        android:padding="@dimen/_4sdp"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/categories_img1"
                            android:layout_width="@dimen/all_brand_photo_width"
                            android:layout_height="@dimen/all_brand_photo_height"
                            android:scaleType="fitXY"
                            app:srcCompat="@drawable/img1"
                            tools:ignore="ContentDescription" />
                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_2sdp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/all_brand_photo_text"
                            android:layout_gravity="center_horizontal"
                            android:text="@string/formal"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="@dimen/_4sdp"
                        android:padding="@dimen/_4sdp"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/categories_img2"
                            android:layout_width="@dimen/all_brand_photo_width"
                            android:layout_height="@dimen/all_brand_photo_height"
                            app:srcCompat="@drawable/img2"
                            android:scaleType="fitXY"
                            tools:ignore="ContentDescription" />
                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_2sdp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/all_brand_photo_text"
                            android:layout_gravity="center_horizontal"
                            android:text="@string/formal"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="@dimen/_4sdp"
                        android:padding="@dimen/_4sdp"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/categories_img3"
                            android:layout_width="@dimen/all_brand_photo_width"
                            android:layout_height="@dimen/all_brand_photo_height"
                            app:srcCompat="@drawable/img3"
                            android:scaleType="fitXY"
                            tools:ignore="ContentDescription" />
                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_2sdp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/all_brand_photo_text"
                            android:layout_gravity="center_horizontal"
                            android:text="@string/formal"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="@dimen/_4sdp"
                        android:padding="@dimen/_4sdp"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/categories_img4"
                            android:layout_width="@dimen/all_brand_photo_width"
                            android:layout_height="@dimen/all_brand_photo_height"
                            app:srcCompat="@drawable/img4"
                            android:scaleType="fitXY"
                            tools:ignore="ContentDescription" />
                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_2sdp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/all_brand_photo_text"
                            android:layout_gravity="center_horizontal"
                            android:text="@string/formal"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="@dimen/_4sdp"
                        android:padding="@dimen/_4sdp"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/categories_img5"
                            android:layout_width="@dimen/all_brand_photo_width"
                            android:layout_height="@dimen/all_brand_photo_height"
                            app:srcCompat="@drawable/img1"
                            android:scaleType="fitXY"
                            tools:ignore="ContentDescription" />
                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_2sdp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/all_brand_photo_text"
                            android:layout_gravity="center_horizontal"
                            android:text="@string/formal"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="@dimen/_4sdp"
                        android:padding="@dimen/_4sdp"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/categories_img6"
                            android:layout_width="@dimen/all_brand_photo_width"
                            android:layout_height="@dimen/all_brand_photo_height"
                            app:srcCompat="@drawable/img2"
                            android:scaleType="fitXY"
                            tools:ignore="ContentDescription" />
                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_2sdp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/all_brand_photo_text"
                            android:layout_gravity="center_horizontal"
                            android:text="@string/formal"/>

                    </LinearLayout>

                </GridLayout>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>