<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="home"
            type="com.ninositsolution.inveleapp.home.HomeVM"/>

        <variable
            name="presenter"
            type="com.ninositsolution.inveleapp.home.IHomeClick"/>
    </data>


    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_36sdp"
                app:contentInsetStart="0dp"
                android:layout_gravity="start"
                android:background="?attr/colorPrimary"
                android:gravity="center|start"
                app:layout_scrollFlags="scroll|enterAlways|snap"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_height="@dimen/_32sdp"
                        android:src="@drawable/logo_invele"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/username"
                        android:onClick="@{()->home.onUsernameClicked()}"
                        android:textSize="@dimen/_14sdp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="@dimen/_20sdp"
                        tools:ignore="RelativeOverlap" />

                </RelativeLayout>


            </android.support.v7.widget.Toolbar>

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbaar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/home_toolbar2"
                    android:weightSum="100"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_36sdp"
                    android:background="@color/colorPrimary"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/_4sdp"
                    android:paddingBottom="@dimen/_4sdp">


                    <EditText
                        android:id="@+id/home_search"
                        android:layout_width="0dp"
                        android:layout_weight="70"
                        android:layout_height="@dimen/_28sdp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/rounded_background"
                        android:textColorHint="@color/textColor"
                        android:textColor="@android:color/black"
                        android:textIsSelectable="true"
                        android:onClick="@{()->home.onSearchClicked()}"
                        android:hint="@string/search"
                        android:padding="@dimen/_4sdp"
                        tools:ignore="Autofill,TextFields" />

                    <ImageView
                        android:layout_marginEnd="@dimen/_4sdp"
                        android:onClick="@{()->home.onWishlistClicked()}"
                        android:layout_width="0dp"
                        android:layout_weight="18"
                        android:layout_height="@dimen/_22sdp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_4sdp"
                        app:srcCompat="@drawable/ic_heart"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:id="@+id/home_cart"
                        android:onClick="@{()->presenter.onCartClicked()}"
                        android:layout_width="0dp"
                        android:layout_weight="10"
                        android:layout_height="@dimen/_22sdp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_4sdp"
                        app:srcCompat="@drawable/ic_shopping_white"
                        tools:ignore="ContentDescription" />

                </LinearLayout>


            </android.support.v7.widget.Toolbar>


        </android.support.design.widget.AppBarLayout>


        <android.support.v4.widget.NestedScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:layout_below="@+id/home_toolbar2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/invelebg">

                <LinearLayout
                    android:id="@+id/home_banner1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <android.support.v4.view.ViewPager
                        android:id="@+id/view_pager"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_90sdp">

                        <LinearLayout
                            android:id="@+id/slider_dots"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal|center_vertical"
                            android:orientation="horizontal">

                        </LinearLayout>
                    </android.support.v4.view.ViewPager>
                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/home_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp">

                </android.support.v7.widget.RecyclerView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <include layout="@layout/home_categories" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_12sdp" />

                    <include layout="@layout/home_flashsales"
                        android:id="@+id/clicks"
                        app:clickEvent="@{1}"/>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_12sdp" />

                    <include layout="@layout/home_trending" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_12sdp" />

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardElevation="@dimen/_8sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/invelebg"
                            android:orientation="vertical"
                            android:padding="@dimen/_4sdp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_8sdp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/brands"
                                    android:fontFamily="@font/roboto_regular"
                                    android:textSize="@dimen/_12sdp"
                                    android:textStyle="bold"/>

                                <TextView
                                    android:onClick="@{()->home.onBrandMoreClicked()}"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/more"
                                    android:layout_alignParentEnd="true"
                                    android:fontFamily="@font/roboto_regular"
                                    android:textSize="@dimen/_12sdp"
                                    android:textStyle="bold"
                                    tools:ignore="RelativeOverlap" />

                            </RelativeLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_2sdp"
                                android:layout_margin="@dimen/_8sdp"
                                android:background="@color/ash_color"/>

                            <android.support.v4.view.ViewPager
                                android:id="@+id/viewpager_brands"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_200sdp">

                            </android.support.v4.view.ViewPager>

                        </LinearLayout>


                    </android.support.v7.widget.CardView>



                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_12sdp" />

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardElevation="@dimen/_8sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/invelebg"
                            android:orientation="vertical"
                            android:padding="@dimen/_4sdp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_8sdp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/under"
                                    android:fontFamily="@font/roboto_regular"
                                    android:textSize="@dimen/_12sdp"
                                    android:textStyle="bold"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/more"
                                    android:layout_alignParentEnd="true"
                                    android:fontFamily="@font/roboto_regular"
                                    android:textSize="@dimen/_12sdp"
                                    android:textStyle="bold"
                                    tools:ignore="RelativeOverlap" />

                            </RelativeLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_2sdp"
                                android:layout_margin="@dimen/_8sdp"
                                android:background="@color/ash_color"/>

                            <android.support.v4.view.ViewPager
                                android:id="@+id/viewpager_under"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_110sdp">

                            </android.support.v4.view.ViewPager>

                        </LinearLayout>


                    </android.support.v7.widget.CardView>



                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_12sdp" />

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardElevation="@dimen/_8sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/invelebg"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_8sdp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/mens"
                                    android:fontFamily="@font/roboto_regular"
                                    android:textSize="@dimen/_12sdp"
                                    android:textStyle="bold"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/more"
                                    android:layout_alignParentEnd="true"
                                    android:fontFamily="@font/roboto_regular"
                                    android:textSize="@dimen/_12sdp"
                                    android:textStyle="bold"
                                    tools:ignore="RelativeOverlap" />

                            </RelativeLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_2sdp"
                                android:layout_margin="@dimen/_8sdp"
                                android:background="@color/ash_color"/>

                            <android.support.v4.view.ViewPager
                                android:id="@+id/viewpager_mens"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_260sdp">

                            </android.support.v4.view.ViewPager>

                        </LinearLayout>


                    </android.support.v7.widget.CardView>



                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_12sdp" />

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardElevation="@dimen/_8sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/invelebg"
                            android:orientation="vertical"
                            >

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_8sdp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/womens"
                                    android:fontFamily="@font/roboto_regular"
                                    android:textSize="@dimen/_12sdp"
                                    android:textStyle="bold"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/more"
                                    android:layout_alignParentEnd="true"
                                    android:fontFamily="@font/roboto_regular"
                                    android:textSize="@dimen/_12sdp"
                                    android:textStyle="bold"/>

                            </RelativeLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_2sdp"
                                android:layout_margin="@dimen/_8sdp"
                                android:background="@color/ash_color"/>

                            <android.support.v4.view.ViewPager
                                android:id="@+id/viewpager_womens"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_260sdp">

                            </android.support.v4.view.ViewPager>

                        </LinearLayout>


                    </android.support.v7.widget.CardView>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_12sdp" />

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardElevation="@dimen/_8sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/invelebg"
                            android:orientation="vertical"
                            >

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_8sdp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/electronics"
                                    android:fontFamily="@font/roboto_regular"
                                    android:textSize="@dimen/_12sdp"
                                    android:textStyle="bold"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/more"
                                    android:layout_alignParentEnd="true"
                                    android:fontFamily="@font/roboto_regular"
                                    android:textSize="@dimen/_12sdp"
                                    android:textStyle="bold"/>

                            </RelativeLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_2sdp"
                                android:layout_margin="@dimen/_8sdp"
                                android:background="@color/ash_color"/>

                            <android.support.v4.view.ViewPager
                                android:id="@+id/viewpager_electronics"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_260sdp">

                            </android.support.v4.view.ViewPager>

                        </LinearLayout>


                    </android.support.v7.widget.CardView>

                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="72dp" />

            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

        <android.support.design.widget.BottomNavigationView
            android:id="@+id/navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            app:labelVisibilityMode="labeled"
            android:background="?android:attr/windowBackground"
            app:layout_behavior="@string/hide_bottom_view_on_scroll_behavior"
            app:menu="@menu/navigation" />

    </android.support.design.widget.CoordinatorLayout>


</layout>