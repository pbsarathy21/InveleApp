<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/_4sdp"
    android:layout_height="match_parent"
    tools:context=".categories.fragments.fragment_all_categories.AllCategoriesFragment">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_80sdp"
                    android:scaleType="fitXY"
                    android:src="@drawable/mb3"
                    tools:ignore="ContentDescription" />


            </android.support.v7.widget.CardView>


            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/_12sdp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/brands"
                android:layout_marginStart="@dimen/_2sdp"
                android:fontFamily="@font/roboto_regular"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold"/>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:columnCount="3">

                <android.support.v7.widget.CardView
                    android:layout_margin="@dimen/_4sdp"
                    android:padding="@dimen/_4sdp"
                    tools:ignore="UnusedAttribute">
                    <ImageView
                        android:layout_width="@dimen/all_brand_photo_width"
                        android:layout_height="@dimen/all_brand_photo_height"
                        app:srcCompat="@drawable/img1"
                        tools:ignore="ContentDescription" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_margin="@dimen/_4sdp"
                    android:padding="@dimen/_4sdp"
                    tools:ignore="UnusedAttribute">
                    <ImageView
                        android:layout_width="@dimen/all_brand_photo_width"
                        android:layout_height="@dimen/all_brand_photo_height"
                        app:srcCompat="@drawable/img2"
                        tools:ignore="ContentDescription" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_margin="@dimen/_4sdp"
                    android:padding="@dimen/_4sdp"
                    tools:ignore="UnusedAttribute">
                    <ImageView
                        android:layout_width="@dimen/all_brand_photo_width"
                        android:layout_height="@dimen/all_brand_photo_height"
                        app:srcCompat="@drawable/img3"
                        tools:ignore="ContentDescription" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_margin="@dimen/_4sdp"
                    android:padding="@dimen/_4sdp"
                    tools:ignore="UnusedAttribute">
                    <ImageView
                        android:layout_width="@dimen/all_brand_photo_width"
                        android:layout_height="@dimen/all_brand_photo_height"
                        app:srcCompat="@drawable/img1"
                        tools:ignore="ContentDescription" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_margin="@dimen/_4sdp"
                    android:padding="@dimen/_4sdp"
                    tools:ignore="UnusedAttribute">
                    <ImageView
                        android:layout_width="@dimen/all_brand_photo_width"
                        android:layout_height="@dimen/all_brand_photo_height"
                        app:srcCompat="@drawable/img2"
                        tools:ignore="ContentDescription" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_margin="@dimen/_4sdp"
                    android:padding="@dimen/_4sdp"
                    tools:ignore="UnusedAttribute">
                    <ImageView
                        android:layout_width="@dimen/all_brand_photo_width"
                        android:layout_height="@dimen/all_brand_photo_height"
                        app:srcCompat="@drawable/img3"
                        tools:ignore="ContentDescription" />

                </android.support.v7.widget.CardView>

            </GridLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/_12sdp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/category_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>



        </LinearLayout>







    </android.support.v4.widget.NestedScrollView>

</FrameLayout>