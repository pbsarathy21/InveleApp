<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:background="@android:color/white"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/_2sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:background="@drawable/mini_layout_bg"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/couponImageView"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:padding="@dimen/_3sdp"
                        android:layout_gravity="center"
                        android:src="@drawable/voucher"/>


                    <View
                        android:layout_width="@dimen/_2sdp"
                        android:layout_height="@dimen/_26sdp"
                        android:background="@color/view_bgcolor"
                        android:paddingTop="@dimen/_3sdp"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:layout_marginLeft="@dimen/_3sdp"/>


                    <TextView
                        android:id="@+id/couponName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/textView_coupon"
                        android:textSize="@dimen/prod_text_size"
                        android:paddingRight="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:gravity="center"/>



                </LinearLayout>
                <TextView
                    android:id="@+id/offer_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_13sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/prod_text_size"
                    android:text="@string/offer_details_textView"/>

                <TextView
                    android:id="@+id/discount_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_13sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:textSize="@dimen/prod_text_size"

                    android:textColor="@android:color/black"
                    android:text="@string/product_discount"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_13sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="@string/more_details_textView"
                    android:textSize="@dimen/prod_text_size" />



            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="@string/button_text"
                    android:textSize="@dimen/prod_text_size"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_20sdp"/>

            </RelativeLayout>








        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_2sdp"
            android:background="@color/view_bgcolor"
            android:layout_marginTop="@dimen/_10sdp"/>





    </LinearLayout>



</android.support.v7.widget.CardView>