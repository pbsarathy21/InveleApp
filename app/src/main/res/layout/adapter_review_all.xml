<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    app:cardElevation="@dimen/_8sdp"
    android:paddingBottom="@dimen/_8sdp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:padding="@dimen/_8sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/prod_rat_img"
            android:layout_margin="@dimen/_8sdp"
            android:layout_width="@dimen/_36sdp"
            android:layout_height="@dimen/_36sdp"
            android:src="@drawable/user"/>

        <RatingBar
            android:id="@+id/prod_rat_rating"
            android:layout_marginTop="@dimen/_16sdp"
            android:layout_toEndOf="@+id/prod_rat_img"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:rating="3.5"
            android:theme="@style/RatingBar"
            style="?android:attr/ratingBarStyleSmall"/>

        <TextView
            android:layout_alignBottom="@+id/prod_rat_rating"
            android:layout_toEndOf="@+id/prod_rat_rating"
            android:layout_marginStart="@dimen/_8sdp"
            android:textSize="@dimen/prod_text_small"
            android:id="@+id/prod_rat_del_delivery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/delay_delivery"/>

        <TextView
            android:layout_alignStart="@+id/prod_rat_rating"
            android:layout_below="@+id/prod_rat_rating"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_toEndOf="@+id/prod_rat_rating"
            android:textSize="@dimen/prod_text_small"
            android:id="@+id/prod_rat_del_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/delivery_desc" />

        <TextView
            android:layout_alignStart="@+id/prod_rat_rating"
            android:layout_below="@+id/prod_rat_del_desc"
            android:layout_marginTop="@dimen/_4sdp"
            android:textSize="@dimen/prod_text_small"
            android:id="@+id/prod_rat_good_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/good_service"
            tools:ignore="TooManyViews" />

        <ImageView
            android:id="@+id/prod_rat_thumbs_ip"
            android:layout_width="@dimen/_16sdp"
            android:layout_height="@dimen/_16sdp"
            android:layout_alignStart="@+id/prod_rat_rating"
            android:layout_below="@+id/prod_rat_good_service"
            android:layout_marginTop="@dimen/_4sdp"
            app:srcCompat="@drawable/thumb_up"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_below="@+id/prod_rat_good_service"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginStart="@dimen/_4sdp"
            android:layout_toEndOf="@+id/prod_rat_thumbs_ip"
            android:textSize="@dimen/prod_text_small"
            android:id="@+id/prod_rat_helpful_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/helpful_count" />


    </RelativeLayout>


    <View
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/view_color"/>

</android.support.v7.widget.CardView>