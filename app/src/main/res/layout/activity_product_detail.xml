<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="product"
            type="com.ninositsolution.inveleapp.product_detail_page.ProductDetailVM"/>
    </data>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.v7.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="@dimen/_36sdp"
                app:contentInsetStart="0dp"
                android:background="@color/white"
                app:popupTheme="@style/AppTheme.PopupOverlay">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/account_header_back"
                        android:layout_width="@dimen/_32sdp"
                        android:layout_height="@dimen/_28sdp"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_centerVertical="true"
                        app:srcCompat="@drawable/ic_arrow_back_24dp"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:layout_toEndOf="@+id/account_header_back"
                        android:layout_marginStart="@dimen/_12sdp"
                        android:id="@+id/search_header"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/search_adapter_sample_text"
                        android:textSize="@dimen/toolBarFont"
                        tools:ignore="RelativeOverlap" />

                </RelativeLayout>

            </android.support.v7.widget.Toolbar>

            <android.support.v7.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="@dimen/_36sdp"
                app:layout_scrollFlags="scroll|enterAlways|snap"
                app:contentInsetStart="0dp"
                android:background="@color/white">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:weightSum="8"
                    android:layout_height="match_parent">
                    
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/user_view"/>

                    <View
                        android:layout_width="@dimen/_1sdp"
                        android:layout_height="match_parent"
                        android:background="@color/grayWhite"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_marginBottom="@dimen/_4sdp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="4"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/product_desc"/>

                    <View
                        android:layout_width="@dimen/_1sdp"
                        android:layout_height="match_parent"
                        android:background="@color/grayWhite"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_marginBottom="@dimen/_4sdp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/review"/>

                    
                </LinearLayout>



            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.AppBarLayout>

        <android.support.v4.widget.NestedScrollView
            android:layout_marginTop="-500dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_300sdp"
                    android:src="@drawable/prdt"
                    tools:ignore="ContentDescription" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_2sdp"
                    android:background="@color/grayWhite"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_marginBottom="@dimen/_4sdp" />

                <android.support.v7.widget.CardView
                    app:cardElevation="@dimen/_8sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:padding="@dimen/_8sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/product_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/prod_text_size"
                            android:text="@string/product_price"
                            tools:ignore="RelativeOverlap" />

                        <TextView
                            android:id="@+id/product_name"
                            android:layout_below="@+id/product_price"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/prod_text_size"
                            android:text="@string/product_detail_name"/>

                        <RatingBar
                            android:layout_marginTop="@dimen/_8sdp"
                            android:id="@+id/product_rating"
                            android:layout_below="@+id/product_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:numStars="5"
                            android:rating="3.5"
                            android:theme="@style/RatingBar"
                            style="?android:attr/ratingBarStyleSmall"/>

                        <TextView
                            android:layout_marginStart="@dimen/_4sdp"
                            android:layout_alignBottom="@+id/product_rating"
                            android:layout_toEndOf="@+id/product_rating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/rating" />

                        <TextView
                            android:text="@string/offer"
                            android:gravity="center"
                            android:background="@drawable/round_margin"
                            android:layout_marginEnd="@dimen/_8sdp"
                            android:layout_alignParentEnd="true"
                            android:layout_width="@dimen/_66sdp"
                            android:layout_height="@dimen/_24sdp" />

                        <ImageView
                            android:layout_alignBottom="@+id/product_rating"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="@dimen/_32sdp"
                            android:layout_width="@dimen/_14sdp"
                            android:layout_height="@dimen/_14sdp"
                            app:srcCompat="@drawable/ic_heart_black"
                            tools:ignore="ContentDescription" />

                        <ImageView
                            android:layout_alignBottom="@+id/product_rating"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="@dimen/_8sdp"
                            android:layout_width="@dimen/_14sdp"
                            android:layout_height="@dimen/_14sdp"
                            app:srcCompat="@drawable/ic_share_black_24dp"
                            tools:ignore="ContentDescription" />

                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    app:cardElevation="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:padding="@dimen/_8sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/option_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_8sdp"
                            android:text="@string/option_1"
                            android:textSize="@dimen/prod_text_size"
                            android:textColor="@color/colorPrimary"/>

                        <LinearLayout
                            android:id="@+id/product_small_image"
                            android:layout_below="@+id/option_1"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:padding="@dimen/_2sdp"
                                android:layout_margin="@dimen/_8sdp"
                                android:layout_width="@dimen/_36sdp"
                                android:layout_height="@dimen/_36sdp"
                                android:src="@drawable/nex1"
                                android:background="@drawable/margin"
                                tools:ignore="ContentDescription" />

                            <ImageView
                                android:padding="@dimen/_2sdp"
                                android:layout_margin="@dimen/_8sdp"
                                android:layout_width="@dimen/_36sdp"
                                android:layout_height="@dimen/_36sdp"
                                android:src="@drawable/nex1"
                                android:background="@drawable/margin"
                                tools:ignore="ContentDescription" />

                            <ImageView
                                android:padding="@dimen/_2sdp"
                                android:layout_margin="@dimen/_8sdp"
                                android:layout_width="@dimen/_36sdp"
                                android:layout_height="@dimen/_36sdp"
                                android:src="@drawable/nex1"
                                android:background="@drawable/margin"
                                tools:ignore="ContentDescription" />

                            <ImageView
                                android:padding="@dimen/_2sdp"
                                android:layout_margin="@dimen/_8sdp"
                                android:layout_width="@dimen/_36sdp"
                                android:layout_height="@dimen/_36sdp"
                                android:src="@drawable/nex1"
                                android:background="@drawable/margin"
                                tools:ignore="ContentDescription" />


                        </LinearLayout>


                        <TextView
                            android:layout_below="@+id/product_small_image"
                            android:id="@+id/option_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_8sdp"
                            android:text="@string/option_2"
                            android:textSize="@dimen/prod_text_size"
                            android:textColor="@color/colorPrimary"/>

                        <LinearLayout
                            android:layout_below="@+id/option_2"
                            android:layout_marginBottom="@dimen/_16sdp"
                            android:orientation="horizontal"
                            android:id="@+id/product_small_size"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_margin="@dimen/_8sdp"
                                android:layout_width="@dimen/_42sdp"
                                android:layout_height="@dimen/_32sdp"
                                android:gravity="center"
                                android:background="@drawable/margin"
                                android:text="@string/spec_32GB" />

                            <TextView
                                android:layout_margin="@dimen/_8sdp"
                                android:layout_width="@dimen/_42sdp"
                                android:layout_height="@dimen/_32sdp"
                                android:gravity="center"
                                android:background="@drawable/margin"
                                android:text="@string/spec_64GB" />

                            <TextView
                                android:layout_margin="@dimen/_8sdp"
                                android:layout_width="@dimen/_42sdp"
                                android:layout_height="@dimen/_32sdp"
                                android:gravity="center"
                                android:background="@drawable/margin"
                                android:text="@string/spec_128GB" />

                            <TextView
                                android:layout_margin="@dimen/_8sdp"
                                android:layout_width="@dimen/_42sdp"
                                android:layout_height="@dimen/_32sdp"
                                android:gravity="center"
                                android:background="@drawable/margin"
                                android:text="@string/spec_256GB" />

                        </LinearLayout>

                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="@dimen/_8sdp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_8sdp">

                        <ImageView
                            android:id="@+id/nano_image"
                            android:padding="@dimen/_1sdp"
                            android:background="@drawable/margin"
                            android:layout_width="@dimen/_90sdp"
                            android:layout_height="@dimen/_90sdp"
                            android:src="@drawable/nano"
                            tools:ignore="ContentDescription" />

                        <TextView
                            android:id="@+id/store_name"
                            android:text="@string/product_store_name"
                            android:layout_toEndOf="@+id/nano_image"
                            android:layout_marginStart="@dimen/_8sdp"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/product_count"
                            android:text="@string/product_count"
                            android:layout_alignStart="@+id/store_name"
                            android:layout_below="@+id/store_name"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/view_store"
                            android:text="@string/view_store"
                            android:layout_alignStart="@+id/store_name"
                            android:layout_below="@+id/product_count"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:gravity="center"
                            android:background="@drawable/margin"
                            android:layout_width="@dimen/_80sdp"
                            android:layout_height="@dimen/_24sdp" />

                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    app:cardElevation="@dimen/_8sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:padding="@dimen/_8sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_marginStart="@dimen/_8sdp"
                            android:id="@+id/specification"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/specification"
                            android:textSize="@dimen/prod_text_size"
                            android:textColor="@color/colorPrimary"/>

                        <TableLayout
                            android:layout_below="@+id/specification"
                            android:id="@+id/specification_table"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TableRow
                                android:layout_marginTop="@dimen/_8sdp">

                                <TextView
                                    android:layout_height="@dimen/_36sdp"
                                    android:layout_width="@dimen/_120sdp"
                                    android:gravity="center"
                                    android:background="@drawable/margin"
                                    android:textSize="@dimen/prod_text_size"
                                    android:text="@string/spec_category"/>

                                <TextView
                                    android:layout_height="@dimen/_36sdp"
                                    android:layout_width="@dimen/_160sdp"
                                    android:gravity="center"
                                    android:background="@drawable/margin"
                                    android:textSize="@dimen/prod_text_size"
                                    android:text="@string/spec_electronics"/>

                            </TableRow>

                            <TableRow>

                                <TextView
                                    android:layout_height="@dimen/_36sdp"
                                    android:layout_width="@dimen/_120sdp"
                                    android:gravity="center"
                                    android:background="@drawable/margin"
                                    android:textSize="@dimen/prod_text_size"
                                    android:text="@string/spec_brand"/>

                                <TextView
                                    android:layout_height="@dimen/_36sdp"
                                    android:layout_width="@dimen/_160sdp"
                                    android:gravity="center"
                                    android:background="@drawable/margin"
                                    android:textSize="@dimen/prod_text_size"
                                    android:text="@string/spec_apple"/>

                            </TableRow>

                            <TableRow>

                                <TextView
                                    android:layout_height="@dimen/_36sdp"
                                    android:layout_width="@dimen/_120sdp"
                                    android:gravity="center"
                                    android:background="@drawable/margin"
                                    android:textSize="@dimen/prod_text_size"
                                    android:text="@string/spec_storage"/>

                                <TextView
                                    android:layout_height="@dimen/_36sdp"
                                    android:layout_width="@dimen/_160sdp"
                                    android:gravity="center"
                                    android:background="@drawable/margin"
                                    android:textSize="@dimen/prod_text_size"
                                    android:text="@string/spec_128GB"/>

                            </TableRow>

                            <TableRow
                                android:layout_marginBottom="@dimen/_8sdp">

                                <TextView
                                    android:layout_height="@dimen/_36sdp"
                                    android:layout_width="@dimen/_120sdp"
                                    android:gravity="center"
                                    android:background="@drawable/margin"
                                    android:textSize="@dimen/prod_text_size"
                                    android:text="@string/spec_ram"/>

                                <TextView
                                    android:layout_height="@dimen/_36sdp"
                                    android:layout_width="@dimen/_160sdp"
                                    android:gravity="center"
                                    android:background="@drawable/margin"
                                    android:textSize="@dimen/prod_text_size"
                                    android:text="@string/spec_4GB"/>

                            </TableRow>


                        </TableLayout>

                        <TextView
                            android:layout_below="@+id/specification_table"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="@dimen/_8sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/prod_text_size"
                            android:text="@string/view_more" />



                    </RelativeLayout>



                </android.support.v7.widget.CardView>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    
                </LinearLayout>

            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

    </android.support.design.widget.CoordinatorLayout>

</layout>